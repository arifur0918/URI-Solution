#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
    string name;
    double fixed_salary, total_sales, final_salary;

    cin>>name;
    cin>>fixed_salary;
    cin>>total_sales;

    final_salary = fixed_salary + (total_sales*0.15);

    cout<<fixed<<setprecision(2)<<"TOTAL = R$ "<<final_salary<<endl;

    return 0;
}
