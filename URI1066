#include <iostream>

using namespace std;

int main()
{
    int i, Value, Even=0, Odd=0, Positive=0, Negative=0;

    for(i = 1; i <= 5; i++)
    {
        cin>>Value;
        if(Value>0)
            Positive++;

        if(Value<0)
            Negative++;

        if(Value%2==0)
            Even++;

        if(Value%2==1 || Value%2==-1)
            Odd++;
    }

    cout<<Even<<" valor(es) par(es)"<<endl;
    cout<<Odd<<" valor(es) impar(es)"<<endl;
    cout<<Positive<<" valor(es) positivo(s)"<<endl;
    cout<<Negative<<" valor(es) negativo(s)"<<endl;

    return 0;
}
